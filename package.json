{
  "name": "mudate",
  "version": "1.0.0",
  "description": "ÂµDate is a superset of Date that helps you handle timezones",
  "main": "_dist/index.js",
  "scripts": {
    "start": "npm run watch & npm run serve",
    "watch": "npm-run-all --parallel \"task:* -- -w\"",
    "serve": "lite-server --baseDir=\"_dist\"",
    "build": "npm-run-all --parallel task:*",
    "publish:gh-pages": "git checkout master; npm run build; git subtree split --prefix _dist -b gh-pages; git push -f origin gh-pages:gh-pages; git branch -D gh-pages",
    "publish:npmjs": "npm publish",
    "task:js": "browserify _sources/index.ts -p tsify > _dist/index.js"
  },
  "bundlesize": [
    {
      "path": "_dist/index.js",
      "maxSize": "3 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/long-lazuli/mudate.git"
  },
  "keywords": [
    "Date",
    "TimeZone"
  ],
  "author": "long-lazuli <yannick.schetrite@didask.com> (www.didask.com)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/long-lazuli/mudate/issues"
  },
  "homepage": "https://github.com/long-lazuli/mudate#readme",
  "devDependencies": {
    "browserify": "^16.2.3",
    "bundlesize": "^0.17.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "lite-server": "^2.4.0",
    "npm-run-all": "^4.1.3",
    "tsify": "^4.0.0",
    "tslint": "^5.11.0",
    "tslint-consistent-codestyle": "^1.14.1",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.1.6"
  }
}
